<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="6"
    android:columnCount="2"
    >

    <Button
        android:background="#0E3C87"
        android:drawableLeft="@drawable/androidlogo"
        android:src="@drawable/androidlogo"
        android:textColor="@android:color/white"
        android:text="1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        />

    <Button
        android:background="#005F99"
        android:drawableLeft="@drawable/androidlogo"
        android:textColor="@android:color/white"
        android:text="3"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        />


    <Button
        android:background="#009CC5"
        android:drawableLeft="@drawable/androidlogo"
        android:textColor="@android:color/white"
        android:text="4"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        />

    <Button
        android:background="#019B9A"
        android:drawableLeft="@drawable/androidlogo"
        android:textColor="@android:color/white"
        android:text="2"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        />


    <Button
        android:background="#5BA222"
        android:drawableLeft="@drawable/androidlogo"
        android:textColor="@android:color/white"
        android:text="5"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        />

    <Button
        android:background="#C3C301"
        android:drawableLeft="@drawable/androidlogo"
        android:textColor="@android:color/white"
        android:text="6"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        />

    <LinearLayout
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowSpan="3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#2E6D27"
            android:drawableLeft="@drawable/androidlogo"
            android:textColor="@android:color/white"
            android:text="7"

            android:layout_margin="3dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
        android:background="#D5005D"
        android:drawableLeft="@drawable/androidlogo"
        android:textColor="@android:color/white"
        android:text="9"
        android:layout_margin="3dp"
        />
    </LinearLayout>


    <Button
        android:background="#E04028"
        android:drawableLeft="@drawable/androidlogo"
        android:textColor="@android:color/white"
        android:text="8"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="2"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        />



    <Button
        android:background="#E18305"
        android:drawableLeft="@drawable/androidlogo"
        android:textColor="@android:color/white"
        android:text="10"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="3dp"
        />
</GridLayout>