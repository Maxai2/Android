<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/card5Hed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RevolverLab"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/card5tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Гики-Фрики №24: Про Doom 4 и Google I/O"
                android:layout_below="@id/card5Hed"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/card5text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="В этом выпуске Денис Скорбилин (@shadowdancerrr) и Иван Лучков (@Luchkov) обсуждают новинки представленные на ежегодной конференции Google I/O: Google Home, Daydream, Allo, Duo и Android N. Иван Лучков делится впечатлениями после прохождения игры Doom 4."
                android:layout_below="@id/card5tit"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/card5date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.05.2016"
                android:layout_below="@id/card5text"
                android:layout_marginTop="60dp"
                android:textColor="@color/cardview_shadow_start_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:55:02"
                android:layout_below="@id/card5text"
                android:layout_marginTop="60dp"
                android:layout_alignParentRight="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/card5date"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <Button
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
                        android:text="прослушать"
                        android:textColor="#5DBCBA" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                    <Button
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"
                        android:drawableLeft="@drawable/ic_cloud_download_black_24dp"
                        android:text="скачать"
                        android:textColor="#0B5951" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>