<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nougatPic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/galaxys7edge"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/nougatPic"
                android:layout_margin="20dp"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/textIc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Androidinsider.ru"
                        android:textSize="25dp"
                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"

                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/headN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nexus 5 обновили до Android Nougat"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/textIc"
                    />

                <TextView
                    android:id="@+id/textN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ежегодные релизы финальных сборок программных апдейтов вроде Lollipo, Marshmallow или Nougat - вот пир во вре..."
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:layout_below="@id/headN"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.08.2016, 12:00"
                    android:textColor="@color/cardview_shadow_start_color"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/textN"
                    />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Подробнее"
                    android:textColor="#FF6D00"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>